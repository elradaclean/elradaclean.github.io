    // مصفوفة صور البانر
    const images = [
      "https://lh3.googleusercontent.com/p/AF1QipNpP0bN_NA7srg8oUYaTNTxKr2dYJzbomE7D9Kq=s680-w680-h510-rw",
      "https://storage.e.jimdo.com/cdn-cgi/image/quality=85,fit=scale-down,format=auto,trim=0;0;122;0,width=1280,height=731/image/522285073/50da22ed-9bc1-484b-a312-ea222b416166.jpg",
      "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTktd1S7lOf37zTAIagCs7_pP4VQkPrfSFiQg&s",
      "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ7H8tnBDeplfBAZw_7R_ObYQno2-EgPKZI4Q&s"
    ];

    let index = 0;
    const banner = document.getElementById("banner");

    function changeBackground() {
      banner.style.backgroundImage = `url('${images[index]}')`;
      index = (index + 1) % images.length;
    }

    // أول تحميل
    changeBackground();
    // تغيير الصورة كل 5 ثواني
    setInterval(changeBackground, 5000);
  </script>
