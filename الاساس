  <!-- كود التحويل -->
  <script>
    function gtag_report_conversion(url) {
      gtag('event', 'conversion', {
        'send_to': 'AW-11482936231/lNsMCP3Y0YcbEKfnvuMq',
        'value': 1.0,
        'currency': 'EGP'
      });

      if (url) {
        setTimeout(function() {
          window.location = url;
        }, 300); // مهلة صغيرة لتسجيل التحويل
      }

      return true; // عشان الرابط يفتح عادي
    }
  </script>

